<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:icons="clr-namespace:Material.Icons;assembly=Material.Icons"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <!--  Base Styles  -->
    <Style
        x:Key="SymbolButton"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="2" />
        <Setter Property="Padding" Value="10" />
    </Style>
    <Style
        x:Key="SettingsButton"
        BasedOn="{StaticResource {x:Type Button}}"
        TargetType="{x:Type Button}">
        <Setter Property="Padding" Value="10" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Margin" Value="0,5,0,5" />
    </Style>
    <Style
        x:Key="InlineSettingsButton"
        BasedOn="{StaticResource SettingsButton}"
        TargetType="{x:Type Button}">
        <Setter Property="Margin" Value="2,2,2,2" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="4.5" />
    </Style>
    <x:Static x:Key="IconCopy" Member="icons:MaterialIconKind.ContentCopy" />
    <x:Static x:Key="IconPaste" Member="icons:MaterialIconKind.ContentPaste" />
    <x:Static x:Key="IconInstalledApps" Member="icons:MaterialIconKind.Apps" />
    <x:Static x:Key="IconLaunch" Member="icons:MaterialIconKind.Launch" />
    <x:Static x:Key="IconLauncher" Member="icons:MaterialIconKind.CogPlay" />
    <x:Static x:Key="IconOpenFolder" Member="icons:MaterialIconKind.FolderEyeOutline" />
    <x:Static x:Key="IconLicenseFolder" Member="icons:MaterialIconKind.KeyOutline" />
    <x:Static x:Key="IconLogFolder" Member="icons:MaterialIconKind.MathLog" />
    <x:Static x:Key="IconProcess" Member="icons:MaterialIconKind.ApplicationBracesOutline" />
    <x:Static x:Key="IconDelete" Member="icons:MaterialIconKind.Delete" />
    <x:Static x:Key="IconEdit" Member="icons:MaterialIconKind.Pencil" />
    <x:Static x:Key="IconGithub" Member="icons:MaterialIconKind.Github" />
    <x:Static x:Key="IconTurnOff" Member="icons:MaterialIconKind.CloseThick" />
    <x:Static x:Key="IconSettings" Member="icons:MaterialIconKind.Tools" />
    <x:Static x:Key="IconKill" Member="icons:MaterialIconKind.Power" />
    <x:Static x:Key="IconFocusOn" Member="icons:MaterialIconKind.TargetVariant" />
    <x:Static x:Key="IconKillAll" Member="icons:MaterialIconKind.Bomb" />
    <x:Static x:Key="IconOpenFolderPicker" Member="icons:MaterialIconKind.FolderSearch" />
    <x:Static x:Key="IconIsLaunched" Member="icons:MaterialIconKind.PowerPlug" />
    <x:Static x:Key="IconIsNotLaunched" Member="icons:MaterialIconKind.PowerPlugOffOutline" />

</ResourceDictionary>
